@page
@model CapstoneManagement.Pages.LecturerPage.TopicManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Topic.Id" />
            <div class="form-group">
                <label asp-for="Topic.Name" class="control-label"></label>
                <input asp-for="Topic.Name" class="form-control" />
                <span asp-validation-for="Topic.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Description" class="control-label"></label>
                <input asp-for="Topic.Description" class="form-control" />
                <span asp-validation-for="Topic.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Topic.Status" /> @Html.DisplayNameFor(model => model.Topic.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Topic.CreateDate" class="control-label"></label>
                <input asp-for="Topic.CreateDate" class="form-control" />
                <span asp-validation-for="Topic.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.SemesterId" class="control-label"></label>
                <select asp-for="Topic.SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="Topic.SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
