@page
@model CapstoneManagement.Pages.LecturerPage.TopicManagement.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Topic</h1>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Topic[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Topic[0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Topic[0].Status)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Topic[0].CreateDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Topic[0].Semester)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Topic)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreateDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Semester.Name)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
					<a asp-page="./Lecturer" asp-route-id="@item.Id">Lecturer</a>
				</td>
			</tr>
		}
	</tbody>
</table>
