@page
@model CapstoneManagement.Pages.Admin.GroupManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Group.Id" />
            <div class="form-group">
                <label asp-for="Group.Name" class="control-label"></label>
                <input asp-for="Group.Name" class="form-control" />
                <span asp-validation-for="Group.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.NumberOfMember" class="control-label"></label>
                <input asp-for="Group.NumberOfMember" class="form-control" />
                <span asp-validation-for="Group.NumberOfMember" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.TopicId" class="control-label"></label>
                <select asp-for="Group.TopicId" class="form-control" asp-items="ViewBag.TopicId"></select>
                <span asp-validation-for="Group.TopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.SemesterId" class="control-label"></label>
                <select asp-for="Group.SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="Group.SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Leader" class="control-label"></label>
                <select asp-for="Group.Leader" class="form-control" asp-items="ViewBag.Leader"></select>
                <span asp-validation-for="Group.Leader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
